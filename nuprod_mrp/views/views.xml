<odoo>
  <data>
    <record id="view_report_mrp_bom_nuprod" model="ir.ui.view">
        <field name="name">report.mrp.bom.nuprod</field>
        <field name="model">mrp</field>
        <field name="inherit_id" ref="mrp.report_mrp_bom"/>
        <field name="arch" type="xml">
            <xpath expr="//th[@name='th_mrp_bom_h']" position="before">
              <th>Category</th>
            </xpath>
            <xpath expr="//td[@name='td_mrp_bom']" position="before">
              <td>
                <span t-esc="data['product'].categ_id.name"/>
              </td>
            </xpath>
        </field>
    </record>
    <record id="view_report_mrp_bom_line_nuprod" model="ir.ui.view">
        <field name="name">report.mrp.bom.nuprod.line</field>
        <field name="model">mrp</field>
        <field name="inherit_id" ref="mrp.report_mrp_bom_line"/>
        <field name="arch" type="xml">
            <xpath expr="//td[@name='td_mrp_bom']" position="before">
              <td>
                <span t-esc="l['prod_id'].categ_id.name"/>
              </td>
            </xpath>
        </field>
    </record>
  </data>
</odoo>